<link rel="stylesheet" href="/frontend/news.css">

<!-- Professional Hero Section -->
<section style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%); padding: 3rem 0; border-radius: 20px; margin-bottom: 2rem;">
    <div style="max-width: 1200px; margin: 0 auto; padding: 0 2rem; text-align: center;">
        <h1 style="color: #ffffff; font-size: 2.5rem; font-weight: 700; margin-bottom: 1rem; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
            Latest Streaming Platform News & Updates
        </h1>
        <p style="color: #b8c5d6; font-size: 1.2rem; max-width: 800px; margin: 0 auto; line-height: 1.6;">
            Stay informed with the latest updates, announcements, and industry developments in streaming technology and platform enhancements.
        </p>
    </div>
</section>

<!-- Professional Features Section -->
<section style="background: rgba(255, 255, 255, 0.02); padding: 2rem; border-radius: 16px; border: 1px solid rgba(255, 255, 255, 0.1); margin-bottom: 2rem;">
    <div class="row">
        <div class="col-md-4 mb-3">
            <div style="text-align: center;">
                <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                    <i class="fa fa-newspaper-o" style="color: white; font-size: 24px;"></i>
                </div>
                <h3 style="color: #ffffff; font-size: 1.2rem; margin-bottom: 0.5rem;">Platform Updates</h3>
                <p style="color: #b8c5d6; font-size: 0.9rem; margin: 0;">Latest streaming platform improvements and new features</p>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div style="text-align: center;">
                <div style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                    <i class="fa fa-cogs" style="color: white; font-size: 24px;"></i>
                </div>
                <h3 style="color: #ffffff; font-size: 1.2rem; margin-bottom: 0.5rem;">Technical Announcements</h3>
                <p style="color: #b8c5d6; font-size: 0.9rem; margin: 0;">System maintenance, upgrades, and technical improvements</p>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div style="text-align: center;">
                <div style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                    <i class="fa fa-bullhorn" style="color: white; font-size: 24px;"></i>
                </div>
                <h3 style="color: #ffffff; font-size: 1.2rem; margin-bottom: 0.5rem;">Industry News</h3>
                <p style="color: #b8c5d6; font-size: 0.9rem; margin: 0;">Streaming industry trends and technology developments</p>
            </div>
        </div>
    </div>
</section>

    
</div>

<section style="--background-color: #0C1018; --border-color: #473590; --angle: 110deg" class="news-container fancy-card">
    <h1 class="text-white news-section-title">Latest News & Announcements</h1>

    <% news.map(item=>{%>
        <div class="news-list-card d-flex align-items-center">
            <a href="<%- item.urlPath %>" class="d-flex justify-content-center align-items-center news-card-thumbnail">
                <p class="m-0"><span class="font-weight-bold">Flix</span><span>TV</span></p>
            </a>

            <div class="pl-2 news-card-content-container">
                    <a href="<%- item.urlPath %>" class="text-white"><%- item.title %></a>
                </h1>
                <p class="news-card-content m-0">
                    <%= item.content %><% if (item.content.length > 50) { %>...<% } %>
                </p>
            </div>
        </div>
    <%})%>
</section>
