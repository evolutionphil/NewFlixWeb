    <!-- Live Logs -->
    <div class="row">
        <div class="col-12">
            <div class="stats-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5>Monitoring Logs</h5>
                    <button class="btn btn-outline-danger btn-sm" onclick="clearLogs()">
                        <i class="fas fa-trash"></i> Clear Logs
