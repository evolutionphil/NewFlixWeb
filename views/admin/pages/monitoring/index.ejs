<script>
// Enhanced animation and interaction functions
function showLoading() {
    document.getElementById('loadingOverlay').classList.add('show');
}

function hideLoading() {
    document.getElementById('loadingOverlay').classList.remove('show');
}

function animateValue(element, start, end, duration = 1000, isRevenue = false) {
    if (start === end) return;
    
    const startTime = performance.now();
    
    function updateValue(currentTime) {
        const elapsedTime = currentTime - startTime;
        const progress = Math.min(elapsedTime / duration, 1);
        
        // Easing function for smooth animation
        const easeOutQuart = 1 - Math.pow(1 - progress, 4);
        const currentValue = start + (end - start) * easeOutQuart;
        
        if (isRevenue) {
            element.textContent = '€' + currentValue.toFixed(2);
        } else {
            element.textContent = Math.round(currentValue).toLocaleString();
        }
        
        if (progress < 1) {
            requestAnimationFrame(updateValue);
        }
    }
    
    requestAnimationFrame(updateValue);
}

function updateStats(data) {
    console.log('Updating stats with data:', data);
    
    // Animate main stats
    const elements = {
        totalTransactions24h: { element: document.getElementById('totalTransactions24h'), isRevenue: false },
        revenue24h: { element: document.getElementById('revenue24h'), isRevenue: true },
        totalDevices: { element: document.getElementById('totalDevices'), isRevenue: false },
        activeDevices: { element: document.getElementById('activeDevices'), isRevenue: false },
        trialDevices: { element: document.getElementById('trialDevices'), isRevenue: false },
        monthlyRevenue: { element: document.getElementById('monthlyRevenue'), isRevenue: true }
    };
    
    // Extract numeric values for animation
    Object.keys(elements).forEach(key => {
        const { element, isRevenue } = elements[key];
        const currentValue = parseFloat(element.textContent.replace(/[^0-9.-]/g, '')) || 0;
        const newValue = isRevenue ? 
            parseFloat(data[key].toString().replace(/[^0-9.-]/g, '')) : 
            parseInt(data[key]) || 0;
            
        animateValue(element, currentValue, newValue, 1200, isRevenue);
    });
    
    // Update platform distribution with staggered animation
    if (data.platformDistribution) {
        const platforms = ['android', 'ios', 'samsung', 'lg', 'tvos', 'other'];
        platforms.forEach((platform, index) => {
            setTimeout(() => {
                const element = document.getElementById(`platform-${platform}`);
                const currentValue = parseInt(element.textContent) || 0;
                const newValue = data.platformDistribution[platform === 'ios' ? 'iOS' : platform] || 0;
                animateValue(element, currentValue, newValue, 800);
            }, index * 100);
        });
    }
}

async function refreshData() {
    showLoading();
    const refreshBtn = document.querySelector('.refresh-btn i');
    refreshBtn.style.animation = 'spin 1s linear infinite';
    
    try {
        const response = await fetch('/admin/api/monitoring-stats');
        const data = await response.json();
        
        setTimeout(() => {
            updateStats(data);
            hideLoading();
            refreshBtn.style.animation = '';
        }, 800); // Small delay for better UX
        
    } catch (error) {
        console.error('Error refreshing data:', error);
        hideLoading();
        refreshBtn.style.animation = '';
    }
}

// Load initial data
document.addEventListener('DOMContentLoaded', function() {
    showLoading();
    
    fetch('/admin/api/monitoring-stats')
        .then(response => response.json())
        .then(data => {
            setTimeout(() => {
                updateStats(data);
                hideLoading();
            }, 1000);
        })
        .catch(error => {
            console.error('Error loading initial data:', error);
            hideLoading();
        });
});

// Auto-refresh every 30 seconds
setInterval(refreshData, 30000);
</script>
