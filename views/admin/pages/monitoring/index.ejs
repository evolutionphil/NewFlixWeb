<!-- Refresh Button -->
<button class="btn btn-primary btn-lg refresh-btn" onclick="refreshAll()">
    <i class="fas fa-sync fa-spin" id="refreshIcon"></i>
</button>

<script>
let socket;
let charts = {};

// Initialize Socket.IO connection
function initSocket() {
    socket = io();
    
    socket.on('connect', function() {
        console.log('Connected to monitoring socket');
    });
    
    socket.on('newRequest', function(data) {
        updateRealtimeStats(data);
        addLogEntry(data);
    });
}

// Initialize charts
function initCharts() {
    // Platform Distribution Chart
    const platformCtx = document.getElementById('platformChart').getContext('2d');
    charts.platform = new Chart(platformCtx, {
        type: 'doughnut',
        data: {
            labels: ['Android', 'iOS', 'Smart TV', 'Web', 'Other'],
            datasets: [{
                data: [0, 0, 0, 0, 0],
                backgroundColor: ['#a4c639', '#007aff', '#6f42c1', '#17a2b8', '#6c757d']
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false
        }
    });
    
    // Revenue Chart
    const revenueCtx = document.getElementById('revenueChart').getContext('2d');
    charts.revenue = new Chart(revenueCtx, {
        type: 'line',
        data: {
            labels: [],
            datasets: [{
                label: 'Revenue ($)',
                data: [],
                borderColor: '#667eea',
                backgroundColor: 'rgba(102, 126, 234, 0.1)',
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
    
    // Registration Chart
    const registrationCtx = document.getElementById('registrationChart').getContext('2d');
    charts.registration = new Chart(registrationCtx, {
        type: 'bar',
        data: {
            labels: [],
            datasets: [{
                label: 'Registrations',
                data: [],
                backgroundColor: '#764ba2'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
}

// Load and update all data
async function loadData() {
    try {
        const response = await fetch('/admin/monitoring/stats');
        const data = await response.json();
        
        updateStats(data);
        updateCharts(data);
        updateMacTable(data.macStats);
        updateLogs(data.recentLogs);
        
    } catch (error) {
        console.error('Error loading data:', error);
    }
}

// Update basic stats
function updateStats(data) {
    document.getElementById('totalDevices').textContent = data.totalDevices.toLocaleString();
    document.getElementById('activatedDevices').textContent = data.activatedDevices.toLocaleString();
    document.getElementById('last24hTransactions').textContent = data.last24hTransactions.toLocaleString();
    document.getElementById('totalRequests').textContent = data.totalRequests.toLocaleString();
}

// Update charts
function updateCharts(data) {
    // Platform chart
    const platformData = [
        data.platformDistribution.android,
        data.platformDistribution.ios,
        data.platformDistribution.smarttv,
        data.platformDistribution.web,
        data.platformDistribution.other
    ];
    charts.platform.data.datasets[0].data = platformData;
    charts.platform.update();
    
    // Revenue chart
    charts.revenue.data.labels = data.monthlyRevenue.map(item => item.month);
    charts.revenue.data.datasets[0].data = data.monthlyRevenue.map(item => item.revenue);
    charts.revenue.update();
    
    // Registration chart
    charts.registration.data.labels = data.dailyRegistrations.map(item => item.date);
    charts.registration.data.datasets[0].data = data.dailyRegistrations.map(item => item.count);
    charts.registration.update();
}

// Update MAC address table
function updateMacTable(macStats) {
    const tbody = document.getElementById('macStatsTable');
    tbody.innerHTML = '';
    
    macStats.slice(0, 50).forEach(mac => {
        const row = document.createElement('tr');
        row.innerHTML = `
            <td><code>${mac.macAddress}</code></td>
            <td>${mac.totalRequests}</td>
            <td>${mac.ipAddresses.length}</td>
            <td>${mac.firstRequest}</td>
            <td>${mac.lastRequest}</td>
            <td>
                <button class="btn btn-info btn-sm" onclick="viewMacDetails('${mac.macAddress}')">
                    <i class="fas fa-eye"></i>
                </button>
                <button class="btn btn-warning btn-sm" onclick="blockMac('${mac.macAddress}')">
                    <i class="fas fa-ban"></i>
                </button>
            </td>
        `;
        tbody.appendChild(row);
    });
}

// Update logs
function updateLogs(logs) {
    const container = document.getElementById('logsContainer');
    container.innerHTML = '';
    
    logs.forEach(log => {
        const logElement = document.createElement('div');
        logElement.className = 'log-item';
        logElement.innerHTML = `
            <span class="text-muted">${log.timestamp}</span>
            <strong>${log.macAddress}</strong>
            <code>${log.endpoint}</code>
            <span class="text-info">${log.ip}</span>
            <span class="badge badge-secondary">${log.status}</span>
        `;
        container.appendChild(logElement);
    });
}

// Real-time updates
function updateRealtimeStats(data) {
    document.getElementById('totalRequests').textContent = data.totalRequests.toLocaleString();
}

function addLogEntry(data) {
    const container = document.getElementById('logsContainer');
    const logElement = document.createElement('div');
    logElement.className = 'log-item';
    logElement.innerHTML = `
        <span class="text-muted">${data.timestamp}</span>
        <strong>${data.macAddress || 'N/A'}</strong>
        <code>${data.endpoint}</code>
        <span class="text-info">${data.ip}</span>
        <span class="platform-badge badge-${data.platform}">${data.platform}</span>
    `;
    container.insertBefore(logElement, container.firstChild);
    
    // Keep only last 100 entries
    while (container.children.length > 100) {
        container.removeChild(container.lastChild);
    }
}

// Action functions
async function blockMac(macAddress) {
    if (!confirm(`Are you sure you want to block MAC address ${macAddress}?`)) {
        return;
    }
    
    try {
        const response = await fetch('/admin/monitoring/block-mac', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                macAddress: macAddress,
                reason: 'Blocked via monitoring dashboard'
            })
        });
        
        const result = await response.json();
        if (result.success) {
            alert('MAC address blocked successfully');
            loadData(); // Refresh data
        } else {
            alert('Error: ' + result.error);
        }
    } catch (error) {
        console.error('Block MAC error:', error);
        alert('Error blocking MAC address');
    }
}

async function viewMacDetails(macAddress) {
    try {
        const response = await fetch(`/admin/monitoring/mac/${macAddress}`);
        const data = await response.json();
        
        // Create modal or new window with detailed info
        const details = `
            MAC Address: ${data.macAddress}
            Total Requests: ${data.stats.totalRequests}
            IP Addresses: ${data.stats.ipAddresses.join(', ')}
            First Request: ${data.stats.firstRequest}
            Last Request: ${data.stats.lastRequest}
            Device Status: ${data.device ? data.device.is_active ? 'Active' : 'Inactive' : 'Not Found'}
        `;
        
        alert(details);
    } catch (error) {
        console.error('View MAC details error:', error);
        alert('Error fetching MAC details');
    }
}

function refreshAll() {
    const icon = document.getElementById('refreshIcon');
    icon.classList.add('fa-spin');
    
    loadData().finally(() => {
        setTimeout(() => {
            icon.classList.remove('fa-spin');
        }, 1000);
    });
}

function refreshMacStats() {
    loadData();
}

function clearLogs() {
    if (confirm('Are you sure you want to clear all logs?')) {
        document.getElementById('logsContainer').innerHTML = '';
    }
}

// Initialize everything when page loads
document.addEventListener('DOMContentLoaded', function() {
    initCharts();
    initSocket();
    loadData();
    
    // Auto-refresh every 30 seconds
    setInterval(loadData, 30000);
});
</script>
