        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="stats-card">
                <h5>Daily Registrations (Last 7 Days)</h5>
                <div class="chart-container">
                    <canvas id="registrationChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- MAC Address Statistics -->
    <div class="row">
        <div class="col-12">
            <div class="stats-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5>MAC Address API Statistics</h5>
                    <button class="btn btn-outline-primary btn-sm" onclick="refreshMacStats()">
                        <i class="fas fa-sync"></i> Refresh
                    </button>
                </div>
                <div class="mac-table">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>MAC Address</th>
                                <th>Total Requests</th>
                                <th>IP Addresses</th>
                                <th>First Request</th>
